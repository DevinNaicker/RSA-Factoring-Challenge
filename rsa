#!/usr/bin/python3
import sys
import math

def find_factors(n):
    # Try dividing n by numbers from 2 to sqrt(n)
    for i in range(2, int(math.isqrt(n)) + 1):
        if n % i == 0:
            # If we find a divisor, return the pair of factors (i, n // i)
            return (i, n // i)
    # If no factors are found, return None (though this case shouldn't occur if n is composite)
    return None

def main():
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        return

    file_name = sys.argv[1]
    
    try:
        # Open the file and read the number
        with open(file_name, "r") as file:
            n = int(file.readline().strip())
            
            # Find the prime factors p and q
            factors = find_factors(n)
            
            if factors:
                p, q = factors
                print(f"{n}={p}*{q}")
            else:
                print(f"Could not factor {n}")
    
    except FileNotFoundError:
        print(f"Error: File '{file_name}' not found.")
    except Exception as e:
        print(f"Error: {e}")

if __name__ == "__main__":
    main()k
